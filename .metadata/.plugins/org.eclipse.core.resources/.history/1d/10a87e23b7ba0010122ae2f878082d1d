package com.proyecto.lafrance.controller;

import com.proyecto.lafrance.model.Reserva;
import com.proyecto.lafrance.repository.ReservaRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.*;

import java.util.List;

@RestController
@RequestMapping("/api/reservas")
@CrossOrigin(origins = "http://localhost:5173")
public class ReservaController {

    @Autowired
    private ReservaRepository reservaRepository;

    // ðŸ”¹ Obtener todas las reservas (solo admin)
    @GetMapping
    public List<Reserva> listar() {
        return reservaRepository.findAll();
    }

    // ðŸ”¹ Obtener reservas por usuario (cliente)
    @GetMapping("/usuario/{id}")
    public List<Reserva> listarPorUsuario(@PathVariable Long id) {
        return reservaRepository.findByUsuarioId(id);
    }

    // ðŸ”¹ Crear una nueva reserva
    @PostMapping
    public Reserva crear(@RequestBody Reserva reserva) {
        // Por defecto las nuevas reservas pueden iniciar como "Pendiente"
        if (reserva.getEstado() == null || reserva.getEstado().isEmpty()) {
            reserva.setEstado("Pendiente");
        }
        return reservaRepository.save(reserva);
    }

    // ðŸ”¹ Actualizar estado (Confirmar / Cancelar)
    @PutMapping("/{id}/estado")
    public Reserva actualizarEstado(@PathVariable Long id, @RequestBody String nuevoEstado) {
        Reserva reserva = reservaRepository.findById(id)
                .orElseThrow(() -> new RuntimeException("Reserva no encontrada"));
        reserva.setEstado(nuevoEstado);
        return reservaRepository.save(reserva);
    }

    // ðŸ”¹ Eliminar una reserva
    @DeleteMapping("/{id}")
    public void eliminar(@PathVariable Long id) {
        reservaRepository.deleteById(id);
    }
}
