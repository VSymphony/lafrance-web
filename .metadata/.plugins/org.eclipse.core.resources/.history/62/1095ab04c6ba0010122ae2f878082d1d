package com.proyecto.lafrance.repository;

import com.proyecto.lafrance.model.Reserva;
import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;

import java.time.LocalDateTime;
import java.util.List;

@Repository
public interface ReservaRepository extends JpaRepository<Reserva, Long> {

    // ✅ Buscar reservas de un usuario
    List<Reserva> findByUsuarioId(Long usuarioId);

    // ✅ Buscar reservas cercanas a una hora (para validar disponibilidad)
    List<Reserva> findByFechaReservaBetween(LocalDateTime inicio, LocalDateTime fin);
}
